<!-- app/views/doctors/show.html.erb -->

<h1>Docteur : <%= @doctor.first_name %> <%= @doctor.last_name %></h1>

<p><strong>Prénom :</strong> <%= @doctor.first_name %></p>
<p><strong>Nom :</strong> <%= @doctor.last_name %></p>
<p><strong>Code Postal :</strong> <%= @doctor.zip_code %></p>
<p><strong>Ville :</strong> <%= @doctor.city.name if @doctor.city %></p>

<%= link_to 'Modifier', edit_doctor_path(@doctor) %> |
<%= link_to 'Retour à la liste', doctors_path %>
